<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesActivity">

    <TextView
        android:id="@+id/boutton1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/purple_700"
        android:text=""
        android:textSize="48sp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boutton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       />
    <TextView
        android:id="@+id/boutton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@color/purple_700"
       android:layout_marginBottom="180dp"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@id/boutton3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boutton1"
        />
    <TextView
        android:id="@+id/boutton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/purple_700"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="60dp"
        android:textSize="48sp"
        app:layout_constraintTop_toBottomOf="@id/boutton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>